// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================================================
// ENUMS
// ============================================================================

enum Currency {
  DIVINE
  CHAOS
  EXALTED
}

enum OrderType {
  BUY
  SELL
}

enum OrderStatus {
  PENDING
  EXECUTED
  CANCELLED
}



model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  wallet    Wallet?
  orders    Order[]
}

model Wallet {
  id        String    @id @default(uuid())
  userId    String    @unique
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  balances  Balance[]
  inventory Inventory[]
  lots      InventoryLot[]
  snapshots WalletSnapshot[]
}

model WalletSnapshot {
  id          String   @id @default(uuid())
  walletId    String
  wallet      Wallet   @relation(fields: [walletId], references: [id])
  totalWealth Float    // Total value in Divines
  timestamp   DateTime @default(now())
  
  @@index([walletId, timestamp])
}


model Balance {
  id       String   @id @default(uuid())
  walletId String
  wallet   Wallet   @relation(fields: [walletId], references: [id])
  currency Currency
  amount   Int      @default(0)


  @@unique([walletId, currency])
}

model MarketItem {
  id                 String       @id // e.g. "alch"
  name               String
  detailsId          String       @unique // e.g. "orb-of-alchemy"
  image              String?
  category           String       @default("Currency")
  primaryValue       Float
  volumePrimaryValue Float
  updatedAt          DateTime     @updatedAt
  pairs              MarketPair[]
  orders             Order[]
  inventory          Inventory[]
  lots               InventoryLot[]
}

model MarketPair {
  id           String          @id @default(uuid())
  marketItemId String
  marketItem   MarketItem      @relation(fields: [marketItemId], references: [id], onDelete: Cascade)
  currencyId   String // "divine", "exalted"
  rate         Float
  volume       Float
  
  // Deep Market Data
  minRate      Float           @default(0)
  maxRate      Float           @default(0)
  lowestStock  Int             @default(0)
  highestStock Int             @default(0)

  history      MarketHistory[]

  @@unique([marketItemId, currencyId])
}

model MarketHistory {
  id           String     @id @default(uuid())
  marketPairId String
  marketPair   MarketPair @relation(fields: [marketPairId], references: [id], onDelete: Cascade)
  timestamp    DateTime
  rate         Float
  volume       Float

  // Deep Market Data
  minRate      Float           @default(0)
  maxRate      Float           @default(0)
  lowestStock  Int             @default(0)
  highestStock Int             @default(0)

  @@index([marketPairId, timestamp])
}

model Inventory {
  id           String     @id @default(uuid())
  walletId     String
  wallet       Wallet     @relation(fields: [walletId], references: [id])
  marketItemId String
  marketItem   MarketItem @relation(fields: [marketItemId], references: [id])
  quantity     Int        @default(0)

  @@unique([walletId, marketItemId])
}

model Order {
  id                    String      @id @default(uuid())
  userId                String
  user                  User        @relation(fields: [userId], references: [id])
  
  marketItemId          String
  marketItem            MarketItem  @relation(fields: [marketItemId], references: [id])
  
  type                  OrderType
  status                OrderStatus @default(PENDING)
  
  currency              Currency // Payment currency (usually DIVINE)
  pricePerUnit          Float
  quantity              Int
  
  fulfilledQuantity     Int?
  fulfilledPricePerUnit Float?
  
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  
  lots                  InventoryLot[]
}

model InventoryLot {
  id              String     @id @default(uuid())
  walletId        String
  wallet          Wallet     @relation(fields: [walletId], references: [id])
  marketItemId    String
  marketItem      MarketItem @relation(fields: [marketItemId], references: [id])
  
  // Lot details
  quantity        Int        @default(0)
  purchasePrice   Float      // Price per unit paid for this lot
  purchasedAt     DateTime   @default(now())
  
  // Optional: link to the order that created this lot
  orderId         String?
  order           Order?     @relation(fields: [orderId], references: [id])
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  @@index([walletId, marketItemId])
}
